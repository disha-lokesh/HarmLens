# HarmLens Environment Configuration
# Copy this file to .env and update with your values

# ============================================
# BLOCKCHAIN CONFIGURATION
# ============================================

# Ethereum Provider URL
# Local: http://127.0.0.1:8545 (Ganache/Hardhat)
# Testnet: https://polygon-mumbai.infura.io/v3/YOUR_INFURA_KEY
# Mainnet: https://polygon-mainnet.infura.io/v3/YOUR_INFURA_KEY
ETH_PROVIDER_URL=http://127.0.0.1:8545

# Smart Contract Address (from deployment)
CONTRACT_ADDRESS=

# Private Key (KEEP SECRET!)
# Get from MetaMask or Ganache
ETH_PRIVATE_KEY=

# Enable/Disable Blockchain
USE_BLOCKCHAIN=true

# ============================================
# IPFS CONFIGURATION
# ============================================

# IPFS Gateway URL
# Local: http://127.0.0.1:5001
# Infura: https://ipfs.infura.io:5001
# Pinata: https://api.pinata.cloud
IPFS_GATEWAY=http://127.0.0.1:5001

# Enable/Disable IPFS
USE_IPFS=true

# ============================================
# WEBHOOK CONFIGURATION
# ============================================

# Webhook URLs for notifications
WEBHOOK_HIGH_RISK=
WEBHOOK_CHILD_SAFETY=
WEBHOOK_ESCALATION=

# ============================================
# DATABASE CONFIGURATION
# ============================================

# SQLite database path
DATABASE_PATH=harmlens_production.db

# ============================================
# API CONFIGURATION
# ============================================

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# CORS Origins (comma-separated)
CORS_ORIGINS=*

# ============================================
# SECURITY
# ============================================

# API Key (optional, for authentication)
API_KEY=

# JWT Secret (for token-based auth)
JWT_SECRET=
